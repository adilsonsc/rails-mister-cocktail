<h1><%= @cocktail.name %></h1>
<%= cl_image_tag @cocktail.photo.key, height: 280, width: 320, crop: :fill %>
<% @cocktail.doses.each do |dose| %>
  <h5><%= dose.ingredient.name %> </h5>
  <h5><%= dose.description %> </h5>



  <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
      <i class="fa fa-trash destroy_dose"></i>
  <% end %>

<% end %>

<%= link_to 'Add dose', new_cocktail_dose_path(@cocktail) %>
<%= link_to 'Back to home', cocktails_path %>
